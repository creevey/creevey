{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "creevey": ["src"]
    },
    "skipLibCheck": true
  },
  "exclude": ["./report", "./lib", "./scripts/dist", "./examples", "./tests/**/*.fixtures"]
}
