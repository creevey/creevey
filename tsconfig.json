{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "react",
    "target": "ESNext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "creevey": ["./"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    ".creevey/**/*",
    ".storybook/*",
    "stories/**/*",
    "types/*",
    "tests/**/*",
    "vite.config.mts",
    "vitest.config.mts"
  ],
  "exclude": ["report", "dist", "scripts"]
}
