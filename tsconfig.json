{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "declarationDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "react",
    "target": "ESNext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "creevey": ["./"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", ".creevey/**/*", ".storybook/*", "stories/**/*", "types/*", "tests/**/*", "webpack.config.ts"],
  "exclude": ["report", "lib", "scripts"]
}
